<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kotlin.mywallet">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWallet">
        <activity
            android:name=".GoalActivity"
            android:exported="true" />
        <activity android:name=".PrivacyActivity" />
        <activity android:name=".AboutOfActivity" />
        <activity android:name=".DetailActivity" />
        <activity android:name=".ListActivity" />
        <activity android:name=".AddAccountActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".AddChargeActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>